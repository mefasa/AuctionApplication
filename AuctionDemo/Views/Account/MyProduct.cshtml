@model IEnumerable<AuctionDemo.Models.ProductModel>
@{
    ViewBag.Title = "MyProduct";
}

<table class="table table-bordered table-striped">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            <p> Teklifiniz </p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th>
            Ürün Fotoğrafı
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
   
    <tr>

        <td>

            @Html.DisplayFor(modelItem => item.Name)

        </td>
        <td>
            <a href="/Home/Details/@item.Id">
                @Html.DisplayFor(modelItem => item.Description)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfferValue)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IsApproved)*@
            @if (item.IsApproved)
            {
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Yayında
                </label>
            }
            else
            {
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Yayında Değil
                </label>
            }
        </td>
        <td>
            <a href="/Home/Details/@item.Id">
                <img src="~/Upload/@Html.DisplayFor(modelItem => item.ImagePath)" width="200" height="100" />
            </a>
        </td>
        

    </tr>
    
    }
</table>
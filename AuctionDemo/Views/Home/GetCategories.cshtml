@model IEnumerable<AuctionDemo.Entities.Category>

@{ 
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}


    <ul class="list-group">
            <a href="/Home/List" class="list-group-item ">
                 Tüm Kategoriler
            </a>
        @foreach (var liste in Model)
        {
            if (selectedCategory != null)
            {
                if (liste.Id == int.Parse((selectedCategory.ToString())))
                {
                     <a href="/Home/List/@liste.Id" class="list-group-item active"><i class="fas fa-angle-double-right"></i> @liste.Name</a>
                
                }
                else
                {
                     <a href="/Home/List/@liste.Id" class="list-group-item"><i class="fas fa-angle-double-right"></i> @liste.Name</a>
                }
            }
            else
            {
                    <a href="/Home/List/@liste.Id" class="list-group-item "><i class="fas fa-angle-double-right"></i> @liste.Name</a>
            }
        }

    </ul>

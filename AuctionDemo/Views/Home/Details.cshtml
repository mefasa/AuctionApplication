@using AuctionDemo.Entities
@model AuctionDemo.Models.ProductModel
@{
    ViewBag.Title = "Details";
    var ajaxOptions = new AjaxOptions()
    {
        AllowCache = false,
        Url = Url.Action("Details", "Home"),
        HttpMethod = "POST",
        UpdateTargetId = "div_offers",
        InsertionMode = InsertionMode.Replace
    };

}
@using (Ajax.BeginForm(ajaxOptions))
{
    <div class="container pb-5" id="product-details">
        <div class="row mt-5">
            <div class="col-md-6">
                <img src="~/Upload/@Model.ImagePath" class="img-responsive w-100 rounded">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@Model.Name</h1>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        @if (Model.IsApproved)
                        {
                            <span class="badge badge-primary">Ürün Açık Artırmada!</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Ürün Açık Artırmada Değil!</span>
                        }
                        <span class="product-number">#235643</span>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12 mt-4">
                        @*<div id="description">
                            @Model.Description
                        </div>*@
                        @*<div class="row mt-2">
                            <div class="col-md-4">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <span class="badge badge-success">53</span>
                            </div>
                            <a href="#">
                                    <div class="col md-4" id="write-review">
                                        Write a review...
                                    </div>
                                </a>
                        </div>*@

                        @Html.Partial("_DetailsOffer")

                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <div class="bd-example bd-example-tabs">
                    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="aciklama-tab" data-toggle="tab" href="#aciklama" role="tab" aria-controls="aciklama" aria-selected="true">Ürün Açıklaması</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" id="yorumlar-tab" data-toggle="tab" href="#yorumlar" role="tab" aria-controls="yorumlar" aria-selected="false">Yorumlar</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-3" id="myTabContent">
                        <div class="tab-pane fade show active" id="aciklama" role="tabpanel" aria-labelledby="aciklama-tab">    
                        @Model.Description
                        </div>

                        @Html.Partial("_CommentDetails")

                    </div>

                </div>
            </div>
        </div>
    </div>

}



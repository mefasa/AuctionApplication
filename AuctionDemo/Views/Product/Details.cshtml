            {
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Yayında
                </label>
            }
            else
            {
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Yayında Değil
                </label>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImagePath)
        </dd>

    </dl>
